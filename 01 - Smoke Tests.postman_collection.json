      "name": "All Posts (Smoke Test)",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "// Validar status code\r",
              "pm.test(\"Status code is 200\", function () {\r",
              "    pm.response.to.have.status(200);\r",
              "});\r",
              "\r",
              "// Validar tempo de resposta\r",
              "pm.test(\"Response time is less than 500ms\", function () {\r",
              "    pm.expect(pm.response.responseTime).to.be.below(500);\r",
              "});\r",
              "\r",
              "// Validar que retorna array\r",
              "pm.test(\"Response is an array\", function () {\r",
              "    const jsonData = pm.response.json();\r",
              "    pm.expect(jsonData).to.be.an('array');\r",
              "});\r",
              "\r",
              "// Validar quantidade m√≠nima de posts\r",
              "pm.test(\"Response contains at least 10 posts\", function () {\r",
              "    const jsonData = pm.response.json();\r",
              "    pm.expect(jsonData.length).to.be.at.least(10);\r",
              "});\r",
              "\r",
              "// Validar estrutura do primeiro post\r",
              "pm.test(\"First post has required fields\", function () {\r",
              "    const jsonData = pm.response.json();\r",
              "    const firstPost = jsonData[0];\r",
              "    pm.expect(firstPost).to.have.property('userId');\r",
              "    pm.expect(firstPost).to.have.property('id');\r",
              "    pm.expect(firstPost).to.have.property('title');\r",
              "    pm.expect(firstPost).to.have.property('body');\r",
              "});"
            ],
