              "pm.test(\"Status code is 201 (JSONPlaceholder allows incomplete data)\", function () {\r",
              "    pm.response.to.have.status(201);\r",
              "});\r",
              "\r",
              "pm.test(\"Document incomplete data scenario\", function () {\r",
              "    console.log(\"Note: Real APIs should return 400 Bad Request for missing required fields\");\r",
